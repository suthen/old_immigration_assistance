<!-- multistep form -->
<form id="msform">
<!-- progressbar -->
  <ul id="progressbar">
    <li class="active">Start</li>
    <li>Location</li>
    <li>Profile</li>
    <li>Family</li>
    <li>Education</li>
  </ul>

<!-- fieldsets -->
  <fieldset>
    <h2 class="fs-title">Select one</h2>

    <input type="button" name="immigrant" class="next action-button" value="I am an immigrant" />
    <h3 class="fs-subtitle">I need to asses my status</h3>
    <h3 class="fs-subtitle">---</h3>
    <input type="button" name="family" class="next action-button" value="Family of an immigrant" />
    <h3 class="fs-subtitle">I need to know their status</h3>
  </fieldset>

  <fieldset>
    <h2 class="fs-title">Location</h2>
    <input type="text" name="destination" placeholder="Country of Destination" />
    <input type="text" name="origin" placeholder="Country of Citizenship" />
    <input type="text" name="zipcode" placeholder="Zip Code Now" />
    <input type="button" name="previous" class="previous action-button" value="Previous" />
    <input type="button" name="next" class="next action-button" value="Next" />
  </fieldset>


  <fieldset>
    <h2 class="fs-title">Profile</h2>
    <h3 class="fs-subtitle">Date of Entry </h3>
  <select>
          <option value="jan">January</option>
          <option value="feb">February</option>
         <option value="mar">March</option>
         <option value="apr">April</option>
     <option value="may">May</option>
     <option value="jun">June</option>
     <option value="jul">July</option>
     <option value="aug">August</option>
     <option value="sep">September</option>
     <option value="oct">October</option>
     <option value="nov">November</option>
     <option value="dec">December</option>
      </select>

      <select>
          <option value="y2013">2013</option>
          <option value="y2012">2012</option>
         <option value="y2011">2011</option>
         <option value="y2010">2010</option>
     <option value="y2009">2009</option>
     <option value="y2008">2008</option>
     <option value="y2007">2007</option>
     <option value="y2006">2006</option>
     <option value="y2005">2005</option>
     <option value="y2004">2004</option>
     <option value="y2003">2003</option>
     <option value="y2002">2002</option>
     <option value="y2001">2001</option>
     <option value="y2000">2000</option>
     <option value="y1999">1999</option>
      </select>
  <br /><br />

    <input type="text" name="fname" placeholder="Current Age" />

      <h3 class="fs-subtitle">Government ID that I have:</h3>

    <input id="demo_box_0" class="css-checkbox" type="checkbox" />
<label for="demo_box_0" name="demo_lbl_0" class="css-label">Passport</label>
<input type="text" name="passportCountry" placeholder="Country of Issue" /><br />

<input id="demo_box_1" class="css-checkbox" type="checkbox" />
<label for="demo_box_1" name="demo_lbl_1" class="css-label">Birth Certificate</label>
<input type="text" name="birthCertCountry" placeholder="Country of Issue" /><br />

<input id="demo_box_2" class="css-checkbox" type="checkbox" />
<label for="demo_box_2" name="demo_lbl_2" class="css-label">Entry Visa</label>
<input type="text" name="visaType" placeholder="Visa Type" />
    <!--<textarea name="address" placeholder="Address"></textarea> -->
    <input type="button" name="previous" class="previous action-button" value="Previous" />
  </fieldset>
</form>

